{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Python",
            "command": "${config:python.pythonPath}",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "${file}"
            ],
            "options": {
                "env": {
                    "PYTHONIOENCODING": "UTF-8"
                }
            }
        }
    ]
}
